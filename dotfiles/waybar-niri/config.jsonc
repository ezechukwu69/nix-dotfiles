// -*- mode: jsonc -*-
{
    // "layer": "top", // Waybar at top layer
    // "position": "bottom", // Waybar position (top|bottom|left|right)
    "height": 25, // Waybar height (to be removed for auto height)
    "spacing": 4, // Gaps between modules (4px)
    "margin-left": 3,
    "margin-right": 3,
    "margin-top": 3,
    "mode": "dock",
    // Choose the order of the modules
    "reload_style_on_change": true,
    "modules-left": [
        "niri/workspaces",
        "niri/window"
    ],
    "modules-center": [
        "network"
    ],
    "modules-right": [
        "group/hardware",
        "pulseaudio",
        "clock",
        "custom/power"
    ],
    "group/hardware": {
      "orientation": "inherit",
      "drawer": {
        "transition-duration": 500
      },
      "modules": [
        "memory",
        "cpu",
        "tray",
        "idle_inhibitor"
      ]
    },
    "niri/workspaces": {
    },
    "niri/window": {
        "format": "{}",
        "rewrite": {
            "(.*) â€” Mozilla Firefox": "ğŸŒ $1",
            "(.*) - fish": "> [$1]"
        },
        "max-length": 25,
        "separate-outputs": true
    },
    "hyprland/workspaces": {
    },
    "hyprland/window": {
        "format": "{}",
        "rewrite": {
            "(.*) â€” Mozilla Firefox": "ğŸŒ $1",
            "(.*) - fish": "> [$1]"
        },
        "max-length": 25,
        "separate-outputs": true
